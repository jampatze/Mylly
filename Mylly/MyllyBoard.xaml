        </local:CustomCanvas>
        <local:CustomCanvas Grid.Row="6" Grid.Column="3" CanAddPiece="True">
        <Line Style="{StaticResource ResourceKey=HorizontalLine}"/>
        <Line Style="{StaticResource ResourceKey=HalfVerticalLineUp}"/>
