            <Line Style="{StaticResource ResourceKey=HalfVerticalLineDown}"/>
            <Ellipse Width="60" Height="60"/>
        </local:CustomCanvas>
        <!--Rivi 2-->
        <local:CustomCanvas Grid.Row="1" Grid.Column="0">
