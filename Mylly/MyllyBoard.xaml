        <!--Rivi 3-->
        <local:CustomCanvas Grid.Row="2" Grid.Column="0">
            <Line Style="{StaticResource ResourceKey=VerticalLine}"/>
        </local:CustomCanvas>
        <local:CustomCanvas Grid.Row="2" Grid.Column="1">
